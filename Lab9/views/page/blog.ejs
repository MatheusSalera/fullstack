<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container">
  <h1>Blog</h1>
  <a href="/cadastrar">Cadastrar Novo Post</a>
  <div>
    <% posts.forEach(post => { %>
      <div>
        <h2><%= post.titulo %></h2>
        <p><%= post.resumo %></p>
        <a href="/post/<%= post._id %>">Leia mais</a>
      </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/footer') %>
